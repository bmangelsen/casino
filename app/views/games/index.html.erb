<% if current_user %>
  <h4>
    Hop into one of our games below!
  </h4>
<% else %>
  <h4>
    Go ahead and log in so you can start playing one of these fabulous games.
  </h4>
<% end %>

<div class="container">
  <div class="row">
    <div id="game">
      <p>
        Blackjack!
      </p>
      <% if current_user %>
        <%= link_to "Start Game", games_path(game: {host: current_user}), method: :post, class: "btn btn-danger btn-xs" %>
        <%= link_to "Join Game", games_path, class: "btn btn-info btn-xs" %>
      <% end %>
    </div>
  </div>
</div>
