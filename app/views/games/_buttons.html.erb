<div class="container">
  <div class="row" id="buttons">
    <% if @game.has_winner?(current_user) %>
      <%= link_to "New Game!", games_path(game: {host: current_user}), method: :post, class: "btn btn-danger btn-lg" %>
    <% else %>
    <%= link_to "Hit", hand_path(@player.hand.id), method: :patch, class: "btn btn-danger btn-lg" %>
    <%= link_to "Stand", hand_path(@dealer.hand.id), method: :patch, class: "btn btn-info btn-lg" %>
    <% end %>
  </div>
</div>
