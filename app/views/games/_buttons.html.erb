<div class="container">
  <div class="row" id="buttons">
    <% if @game.over %>
      <%= link_to "New Game!", games_path(game: {host: current_user}), method: :post, class: "btn btn-danger btn-lg" %>
    <% end %>

    <% if !@game.over %>
      <% if @player.hand %>
        <%= link_to "Hit", hand_path(@player.hand.id), method: :patch, class: "btn btn-danger btn-lg" %>
        <%= link_to "Stand", dealer_update_path(@dealer.hand.id, @player.hand.id), method: :patch, class: "btn btn-info btn-lg" %>
      <% end %>
    <% end %>

      <% if !@game.deck %>
        <%= link_to "Deal", decks_path(deck: {game_id: @game.id}), method: :post, class: "btn btn-danger btn-lg" %>
      <% end %>
  </div>
</div>
