<div class="container">
  <%= link_to "Leave table", leave_table_path(id: game.table.id), class: "btn btn-info btn-xs" %>
  <div class="row" id="buttons">
    <% if game.over %>
      <%= link_to "New Game!", games_path(game: {host: current_user.id, table_id: game.table.id}), method: :post, class: "btn btn-danger btn-lg" %>
    <% else %>
      <%= link_to "Hit", hand_path(player.hand.id), method: :patch, class: "btn btn-danger btn-lg" %>
      <%= link_to "Stand", hand_path(dealer.hand.id), method: :patch, class: "btn btn-info btn-lg" %>
    <% end %>
  </div>
</div>
